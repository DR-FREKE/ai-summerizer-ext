{
  "name": "analyzer_ext",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && tsc && npm run copy-files",
    "start": "next start",
    "copy-files": "cp src/extension/manifest.json dist/",
    "watch:ts": "tsc --watch",
    "watch:background": "nodemon --watch src/extension --ext ts --exec 'tsc src/extension/background.ts --outDir dist/'",
    "watch:content": "nodemon --watch src/extension --ext ts --exec 'tsc src/extension/content.ts --outDir dist/'",
    "watch:all": "npm-run-all --parallel dev watch:ts watch:background watch:content",
    "lint": "next lint"
  },
  "dependencies": {
    "@prisma/client": "^5.12.1",
    "@types/jsonwebtoken": "^9.0.6",
    "clsx": "^2.1.1",
    "iconsax-react": "^0.0.8",
    "jsonwebtoken": "^9.0.2",
    "next": "14.2.3",
    "next-auth": "^4.24.7",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "copy-webpack-plugin": "^12.0.2",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8",
    "prisma": "^5.12.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
